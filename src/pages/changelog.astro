---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ChangelogComponent from '../components/Changelog.astro';
import { t } from '../i18n/utils';

const translate = t('en');
const title = translate('changelog.title') + ' - Arclet Copier';
const description = translate('changelog.description');
---

<Layout title={title} lang="en" description={description}>
  <Header lang="en" />

  <main class="pt-24 pb-16">
    <ChangelogComponent lang="en" />
  </main>

  <Footer lang="en" />
</Layout>
