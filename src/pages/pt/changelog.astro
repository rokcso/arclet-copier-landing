---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ChangelogComponent from '../../components/Changelog.astro';
import { t } from '../../i18n/utils';

const translate = t('pt');
const title = translate('changelog.title') + ' - Arclet Copier';
const description = translate('changelog.description');
---

<Layout title={title} lang="pt" description={description}>
  <Header lang="pt" />

  <main class="pt-24 pb-16">
    <ChangelogComponent lang="pt" />
  </main>

  <Footer lang="pt" />
</Layout>
