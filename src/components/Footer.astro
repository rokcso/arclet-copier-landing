---
import { t, type Language } from "../i18n/utils";

export interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const translate = t(lang);
---

<footer class="bg-secondary-900 text-white py-16">
    <div class="max-w-6xl mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
            <!-- Logo and Description -->
            <div class="md:col-span-2">
                <div class="flex items-center space-x-3 mb-4">
                    <img
                        src="/images/logo.webp"
                        alt="Arclet Copier"
                        class="w-10 h-10 rounded-lg"
                    />
                    <span class="font-serif font-semibold text-2xl"
                        >Arclet Copier</span
                    >
                </div>
                <p class="text-secondary-300 leading-relaxed mb-6 max-w-md">
                    {translate("footer.description")}
                </p>
                <div class="flex space-x-4">
                    <a
                        href="https://github.com/rokcso/arclet-copier"
                        target="_blank"
                        class="w-10 h-10 bg-secondary-800 hover:bg-secondary-700 rounded-lg flex items-center justify-center transition-colors duration-200"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="https://x.com/rokcso"
                        target="_blank"
                        class="w-10 h-10 bg-secondary-800 hover:bg-secondary-700 rounded-lg flex items-center justify-center transition-colors duration-200"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h3 class="font-semibold text-lg mb-4">
                    {lang === "zh" ? "快速链接" : "Quick Links"}
                </h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="https://github.com/rokcso/arclet-copier"
                            target="_blank"
                            class="text-secondary-300 hover:text-white transition-colors duration-200"
                        >
                            {translate("footer.links.github")}
                        </a>
                    </li>
                    <li>
                        <a
                            href="https://lunarye.com/"
                            target="_blank"
                            class="text-secondary-300 hover:text-white transition-colors duration-200"
                        >
                            {translate("footer.links.website")}
                        </a>
                    </li>
                    <li>
                        <a
                            href="https://rokcso.com/"
                            target="_blank"
                            class="text-secondary-300 hover:text-white transition-colors duration-200"
                        >
                            {translate("footer.links.developer")}
                        </a>
                    </li>
                    <li>
                        <a
                            href="mailto:hi@rokcso.com"
                            class="text-secondary-300 hover:text-white transition-colors duration-200"
                        >
                            {translate("footer.links.feedback")}
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div
            class="border-t border-secondary-800 pt-8 flex flex-col md:flex-row items-center justify-between"
        >
            <p class="text-secondary-400 text-sm">
                © 2025 Arclet Copier. {translate("footer.copyright")}
            </p>
            <div class="flex items-center space-x-6 mt-4 md:mt-0">
                <a
                    href={lang === "zh" ? "/zh/privacy" : "/privacy"}
                    class="text-secondary-400 hover:text-white text-sm transition-colors duration-200"
                    >{lang === "zh" ? "隐私政策" : "Privacy Policy"}</a
                >
                <a
                    href={lang === "zh" ? "/zh/terms" : "/terms"}
                    class="text-secondary-400 hover:text-white text-sm transition-colors duration-200"
                    >{lang === "zh" ? "使用条款" : "Terms of Service"}</a
                >
                <a
                    href="/sitemap.xml"
                    class="text-secondary-400 hover:text-white text-sm transition-colors duration-200"
                    target="_blank"
                    rel="noopener">{translate("footer.links.sitemap")}</a
                >
            </div>
        </div>
    </div>
</footer>
