---
import { t, type Language } from '../i18n/utils';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const translate = t(lang);
---

<footer class="bg-secondary-900 text-white py-16">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
      <!-- Logo and Description -->
      <div class="md:col-span-2">
        <div class="flex items-center space-x-3 mb-4">
          <img
            src="/img/logo.webp"
            alt="Arclet Copier"
            class="w-10 h-10 rounded-lg"
            loading="lazy"
            decoding="async"
          />
          <span class="font-serif font-semibold text-2xl">Arclet Copier</span>
        </div>
        <p class="text-secondary-300 leading-relaxed mb-6 max-w-md">
          {translate('footer.description')}
        </p>
        <div class="flex space-x-4">
          <a
            href="https://github.com/rokcso/arclet-copier"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="w-10 h-10 bg-secondary-800 rounded-lg flex items-center justify-center hover:bg-secondary-700"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
          <a
            href="https://x.com/rokcso"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="X (Twitter)"
            class="w-10 h-10 bg-secondary-800 rounded-lg flex items-center justify-center hover:bg-secondary-700"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contact Us -->
      <div>
        <h3 class="font-semibold text-lg mb-4">
          {translate('footer.contact_us')}
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="mailto:hi@coryso.com"
              class="text-secondary-300 flex items-center gap-2 hover:text-white"
            >
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span>Email</span>
            </a>
          </li>
          <li>
            <a
              href="https://discord.gg/NpRnQ5zp5q"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Discord"
              class="text-secondary-300 flex items-center gap-2 hover:text-white"
            >
              <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.37a19.791 19.791 0 00-4.885-1.515.074.074 0 00-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 00-5.487 0 12.64 12.64 0 00-.617-1.25.077.077 0 00-.079-.037A19.736 19.736 0 003.677 4.37a.07.07 0 00-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 00.031.057 19.9 19.9 0 005.993 3.03.078.078 0 00.084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 00-.041-.106 13.107 13.107 0 01-1.872-.892.077.077 0 01-.008-.128 10.2 10.2 0 00.372-.292.074.074 0 01.077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 01.078.01c.12.098.246.198.373.292a.077.077 0 01-.006.127 12.299 12.299 0 01-1.873.892.077.077 0 00-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 00.084.028 19.839 19.839 0 006.002-3.03.077.077 0 00.032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 00-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"></path>
              </svg>
              <span>Discord</span>
            </a>
          </li>
        </ul>
      </div>

    </div>

    <!-- Partners -->
    <div class="border-t border-secondary-800 pt-8 pb-8">
      <div class="flex flex-col items-center">
        <h3 class="text-secondary-400 text-sm font-semibold mb-4">
          {translate('footer.partners')}
        </h3>
        <div class="flex flex-col md:flex-row items-center gap-6 md:gap-8">
          <a
            href="https://ko-fi.com/D1D4YYEMT"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-80"
          >
            <img
              src="https://storage.ko-fi.com/cdn/kofi5.png?v=6"
              style="height: 40px;"
              height="40"
              alt="Buy Me a Coffee at ko-fi.com"
              loading="lazy"
              decoding="async"
            />
          </a>
          <a
            href="https://faceseek.online"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-80"
          >
            <img
              src="https://faceseek.online/images/Light.svg"
              style="height: 40px;"
              height="40"
              alt="FaceSeek Partner"
              loading="lazy"
              decoding="async"
            />
          </a>
          <a
            href="https://fazier.com/launches/arclet-copier"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-80"
          >
            <img
              src="https://fazier.com/api/v1//public/badges/launch_badges.svg?badge_type=featured&theme=light"
              style="height: 40px;"
              height="40"
              alt="Fazier badge"
              loading="lazy"
              decoding="async"
            />
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="border-t border-secondary-800 pt-8 flex flex-col md:flex-row items-center justify-between gap-4"
    >
      <p class="text-secondary-400 text-sm text-center md:text-left">
        Â© {new Date().getFullYear()} Arclet Copier. {translate('footer.developed_by')} <a
          href="https://coryso.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-secondary-300 hover:text-white"
          >Coryso Studio</a
        >
      </p>
      <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6">
        <a
          href={lang === 'en' ? '/privacy' : `/${lang}/privacy`}
          class="text-secondary-400 text-sm hover:text-white"
          >{translate('footer.privacy_policy')}</a
        >
        <a
          href={lang === 'en' ? '/terms' : `/${lang}/terms`}
          class="text-secondary-400 text-sm hover:text-white"
          >{translate('footer.terms_of_service')}</a
        >
        <a
          href="/sitemap.xml"
          class="text-secondary-400 text-sm hover:text-white"
          target="_blank"
          rel="noopener noreferrer">{translate('footer.links.sitemap')}</a
        >
      </div>
    </div>
  </div>
</footer>
