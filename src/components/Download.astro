---
import { t, type Language } from '../i18n/utils';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const translate = t(lang);
---

<section id="download" class="py-20 bg-secondary-50">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-semibold text-secondary-900 mb-4">
        {translate('download.title')}
      </h2>
      <p class="text-xl text-secondary-600 max-w-2xl mx-auto">
        {translate('download.subtitle')}
      </p>
    </div>

    <!-- Download Options -->
    <div
      class:list={`grid grid-cols-1 md:grid-cols-2 ${lang === 'zh' ? 'lg:grid-cols-3' : 'lg:grid-cols-2'} gap-8 mb-16`}
    >
      <!-- Chrome Web Store - Recommended -->
      <div class="relative">
        <!-- Recommended Badge for Chrome (shown by default) -->
        <div
          id="chrome-recommended-badge"
          class="absolute -top-3 left-1/2 -translate-x-1/2 bg-primary-600 text-white px-4 py-1 rounded-full text-sm font-semibold shadow-md z-10"
        >
          ⭐ {translate('download.recommended')}
        </div>

        <div
          id="chrome-card"
          class="bg-white rounded-2xl p-8 text-center border-2 border-primary-600 shadow-lg flex flex-col min-h-[380px]"
        >
          <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <img
              src="/img/chrome-logo.svg"
              alt="Google Chrome"
              class="w-16 h-16"
              width="64"
              height="64"
              loading="lazy"
              decoding="async"
            />
          </div>
          <h3 class="text-2xl font-semibold text-secondary-900 mb-3">
            {translate('download.chrome_store')}
          </h3>
          <p class="text-secondary-600 mb-6">
            {translate('download.chrome_store_desc')}
          </p>
          <a
            href="https://chromewebstore.google.com/detail/mkflehheaokdfopijachhfdbofkppdil"
            target="_blank"
            class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-xl shadow-soft mt-auto w-fit mx-auto hover:bg-primary-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5"
            onclick={`if (typeof umami !== 'undefined') { umami.track('download_click', { store: 'chrome', language: '${lang}', source: 'download' }); }`}
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Download icon">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            {translate('download.cta_chrome')}
          </a>
        </div>
      </div>

      <!-- Microsoft Edge Add-ons Store -->
      <div class="relative">
        <!-- Recommended Badge for Edge (hidden by default) -->
        <div
          id="edge-recommended-badge"
          class="hidden absolute -top-3 left-1/2 -translate-x-1/2 bg-primary-600 text-white px-4 py-1 rounded-full text-sm font-semibold shadow-md z-10"
        >
          ⭐ {translate('download.recommended')}
        </div>

        <div
          id="edge-card"
          class="bg-white rounded-2xl p-8 text-center border border-secondary-200 shadow-soft flex flex-col min-h-[380px]"
        >
        <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <img
            src="/img/edge-logo.svg"
            alt="Microsoft Edge"
            class="w-16 h-16"
            width="64"
            height="64"
            loading="lazy"
            decoding="async"
          />
        </div>
        <h3 class="text-2xl font-semibold text-secondary-900 mb-3">
          {translate('download.edge_store')}
        </h3>
        <p class="text-secondary-600 mb-6">
          {translate('download.edge_store_desc')}
        </p>
        <a
          href="https://microsoftedge.microsoft.com/addons/detail/flcemgbijffbmbgcmabmmjhankbegdgm"
          target="_blank"
          class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-xl shadow-soft mt-auto w-fit mx-auto hover:bg-primary-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5"
          onclick={`if (typeof umami !== 'undefined') { umami.track('download_click', { store: 'edge', language: '${lang}', source: 'download' }); }`}
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Download icon">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            ></path>
          </svg>
          {translate('download.cta_edge')}
        </a>
      </div>

      {
        lang === 'zh' && (
          <div class="bg-white rounded-2xl p-8 text-center border border-secondary-200 shadow-soft flex flex-col min-h-[380px]">
            <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center text-primary-700 mx-auto mb-6">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Document icon">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                />
              </svg>
            </div>
            <h3 class="text-2xl font-semibold text-secondary-900 mb-3">
              {translate('download.feishu_guide')}
            </h3>
            <p class="text-secondary-600 mb-6">{translate('download.feishu_guide_desc')}</p>
            <a
              href="https://thecoryso.feishu.cn/wiki/X551wqeDAiICrfkqoiacQxtNnme"
              target="_blank"
              class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-xl shadow-soft mt-auto w-fit mx-auto hover:bg-primary-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="External link icon">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                />
              </svg>
              {translate('download.view_guide')}
            </a>
          </div>
        )
      }
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const chromeRecommendedBadge = document.getElementById('chrome-recommended-badge');
    const edgeRecommendedBadge = document.getElementById('edge-recommended-badge');
    const chromeCard = document.getElementById('chrome-card');
    const edgeCard = document.getElementById('edge-card');

    // Detect browser
    const userAgent = navigator.userAgent.toLowerCase();
    const isEdge = userAgent.includes('edg/');

    // Switch recommended badge based on browser
    if (isEdge) {
      // Hide Chrome badge, show Edge badge
      if (chromeRecommendedBadge) {
        chromeRecommendedBadge.classList.add('hidden');
      }
      if (edgeRecommendedBadge) {
        edgeRecommendedBadge.classList.remove('hidden');
      }

      // Update card borders - Edge gets primary border, Chrome gets secondary
      if (chromeCard) {
        chromeCard.classList.remove('border-2', 'border-primary-600', 'shadow-lg');
        chromeCard.classList.add('border', 'border-secondary-200', 'shadow-soft');
      }
      if (edgeCard) {
        edgeCard.classList.remove('border', 'border-secondary-200', 'shadow-soft');
        edgeCard.classList.add('border-2', 'border-primary-600', 'shadow-lg');
      }
    }
    // Default is Chrome (already set in HTML)
  });
</script>
