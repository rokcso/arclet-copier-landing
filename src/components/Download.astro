---
import { t, type Language } from "../i18n/utils";

export interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const translate = t(lang);
---

<section id="download" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2
                class="text-4xl md:text-5xl font-serif font-semibold text-secondary-900 mb-4"
            >
                {translate("download.title")}
            </h2>
            <p class="text-xl text-secondary-600 max-w-2xl mx-auto">
                {translate("download.subtitle")}
            </p>
        </div>

        <!-- Download Options -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            <!-- Chrome Web Store -->
            <div
                class="bg-secondary-50 rounded-2xl p-8 text-center hover:bg-white hover:shadow-soft-lg transition-all duration-300 border border-transparent hover:border-secondary-200 flex flex-col min-h-[380px]"
            >
                <div
                    class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-6"
                >
                    <img
                        src="/img/chrome-logo.svg"
                        alt="Google Chrome"
                        class="w-16 h-16"
                        width="64"
                        height="64"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
                <h3 class="text-2xl font-semibold text-secondary-900 mb-3">
                    {translate("download.chrome_store")}
                </h3>
                <p class="text-secondary-600 mb-6">
                    {translate("download.chrome_store_desc")}
                </p>
                <a
                    href="https://chromewebstore.google.com/detail/mkflehheaokdfopijachhfdbofkppdil"
                    target="_blank"
                    class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-all duration-200 shadow-soft hover:shadow-soft-md mt-auto w-fit mx-auto"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                        ></path>
                    </svg>
                    {lang === "zh" ? "立即安装" : "Install Now"}
                </a>
            </div>

            <!-- Microsoft Edge Add-ons Store -->
            <div
                class="bg-secondary-50 rounded-2xl p-8 text-center hover:bg-white hover:shadow-soft-lg transition-all duration-300 border border-transparent hover:border-secondary-200 flex flex-col min-h-[380px]"
            >
                <div
                    class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-6"
                >
                    <img
                        src="/img/edge-logo.svg"
                        alt="Microsoft Edge"
                        class="w-16 h-16"
                        width="64"
                        height="64"
                        loading="lazy"
                        decoding="async"
                    />
                </div>
                <h3 class="text-2xl font-semibold text-secondary-900 mb-3">
                    {translate("download.edge_store")}
                </h3>
                <p class="text-secondary-600 mb-6">
                    {translate("download.edge_store_desc")}
                </p>
                <a
                    href="https://microsoftedge.microsoft.com/addons/detail/flcemgbijffbmbgcmabmmjhankbegdgm"
                    target="_blank"
                    class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-xl hover:bg-blue-700 transition-all duration-200 shadow-soft hover:shadow-soft-md mt-auto w-fit mx-auto"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                        ></path>
                    </svg>
                    {lang === "zh" ? "立即安装" : "Install Now"}
                </a>
            </div>

            <!-- GitHub Releases -->
            <div
                class="bg-secondary-50 rounded-2xl p-8 text-center hover:bg-white hover:shadow-soft-lg transition-all duration-300 border border-transparent hover:border-secondary-200 flex flex-col min-h-[380px]"
            >
                <div
                    class="w-16 h-16 bg-secondary-100 rounded-2xl flex items-center justify-center text-secondary-700 mx-auto mb-6"
                >
                    <svg
                        class="w-8 h-8"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
                        ></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-semibold text-secondary-900 mb-3">
                    {translate("download.github_release")}
                </h3>
                <p class="text-secondary-600 mb-6">
                    {translate("download.github_release_desc")}
                </p>
                <a
                    href="https://github.com/rokcso/arclet-copier/releases"
                    target="_blank"
                    class="inline-flex items-center justify-center px-6 py-3 bg-white text-secondary-700 font-semibold rounded-xl border border-secondary-300 hover:bg-secondary-50 transition-all duration-200 shadow-soft hover:shadow-soft-md mt-auto w-fit mx-auto"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                        ></path>
                    </svg>
                    {lang === "zh" ? "下载源码" : "Download Source"}
                </a>
            </div>
        </div>

        <!-- Installation Guide -->
        <div class="bg-secondary-50 rounded-2xl p-8">
            <h3
                class="text-2xl font-semibold text-secondary-900 mb-6 text-center"
            >
                {translate("download.install_guide")}
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
                {
                    [0, 1, 2, 3, 4].map((index) => (
                        <div class="bg-white rounded-xl p-6 text-center">
                            <div class="w-10 h-10 bg-primary-600 text-white rounded-full flex items-center justify-center font-semibold text-lg mx-auto mb-4">
                                {index + 1}
                            </div>
                            <p class="text-secondary-700 text-sm leading-relaxed">
                                {translate(`download.install_steps.${index}`)}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
