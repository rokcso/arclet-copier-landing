                <!-- Navigation Links -->
                <div class="hidden md:flex items-center space-x-6">
                    <a
                        href={lang === "en"
                            ? "/#features"
                            : `/${lang}#features`}
                        class="text-secondary-600 hover:text-primary-600 transition-colors duration-200 font-medium"
