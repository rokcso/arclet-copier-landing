---

<section id="features" class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-semibold text-secondary-900 mb-4">
        {translate('features.title')}
      </h2>
      <p class="text-xl text-secondary-600 max-w-2xl mx-auto">
        {translate('features.subtitle')}
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="bg-secondary-50 rounded-2xl p-8 border border-transparent">
          <!-- Icon -->
          <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center text-primary-600 mb-6">
            <Fragment set:html={feature.icon} />
          </div>

          <!-- Content -->
          <h3 class="text-xl font-semibold text-secondary-900 mb-3">
            {translate(`features.items.${feature.key}.title`)}
          </h3>
          <p class="text-secondary-600 leading-relaxed">
            {translate(`features.items.${feature.key}.description`)}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
