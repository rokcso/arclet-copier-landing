---
import { t, type Language } from '../i18n/utils';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const translate = t(lang);
---

<section class="pt-32 pb-20 bg-gradient-to-b from-secondary-50 to-white">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center">
      <!-- Title -->
      <h1
        class="text-4xl md:text-5xl font-serif font-bold text-secondary-900 mb-6 leading-tight"
      >
        {translate('hero.title')}
        <br />
        <span class="text-primary-600">{translate('hero.subtitle')}</span>
      </h1>

      <!-- Description -->
      <p class="text-lg md:text-xl text-secondary-600 mb-10 max-w-4xl mx-auto">
        {translate('hero.description')}
      </p>

      <!-- CTA Buttons - Dual CTA Strategy -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8">
        <!-- Primary CTA -->
        <a
          href="#"
          id="hero-download-btn"
          data-text-chrome={translate('hero.cta_primary_chrome')}
          data-text-edge={translate('hero.cta_primary_edge')}
          class="inline-flex items-center gap-3 px-8 py-4 bg-primary-600 text-white text-lg font-semibold rounded-xl hover:bg-primary-700 transition-all duration-300 hover:shadow-lg hover:shadow-primary-600/30 w-full sm:w-auto justify-center"
          target="_blank"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-label="Download icon">
            <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm-.84 4.67h1.68v8.36h3.62L12 17.75l-4.46-4.72h3.62V4.67z"></path>
          </svg>
          <span id="hero-download-text">{translate('hero.cta_primary_chrome')}</span>
        </a>

        <!-- Secondary CTA -->
        <a
          href="#screenshots"
          class="inline-flex items-center gap-3 px-8 py-4 bg-white text-primary-600 text-lg font-semibold rounded-xl border-2 border-primary-600 hover:bg-primary-50 transition-all duration-300 w-full sm:w-auto justify-center"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Screenshots icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span>{translate('hero.cta_secondary')}</span>
        </a>
      </div>

      <!-- Feature Tags -->
      <div class="flex flex-wrap md:flex-nowrap items-center justify-center gap-3 max-w-3xl mx-auto">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-secondary-200 rounded-full text-sm font-medium text-secondary-700 shadow-sm">
          <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Lightning fast icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          {translate('hero.feature_1')}
        </span>
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-secondary-200 rounded-full text-sm font-medium text-secondary-700 shadow-sm">
          <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Privacy first icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          {translate('hero.feature_2')}
        </span>
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-secondary-200 rounded-full text-sm font-medium text-secondary-700 shadow-sm">
          <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Custom formats icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          {translate('hero.feature_3')}
        </span>
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-secondary-200 rounded-full text-sm font-medium text-secondary-700 shadow-sm">
          <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-label="Free and open source icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
          {translate('hero.feature_4')}
        </span>
      </div>

      <!-- Trust Elements -->
      <div class="mt-8 pt-6 border-t border-secondary-200/50 max-w-2xl mx-auto">
        <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6 text-xs md:text-sm text-secondary-500">
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-label="Verified icon">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span
              id="hero-trust-verified"
              data-text-chrome={translate('hero.trust_verified')}
              data-text-edge={translate('hero.trust_verified_edge')}
            >{translate('hero.trust_verified')}</span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-label="Open source icon">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>{translate('hero.trust_opensource')}</span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20" aria-label="Rating icon">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span>{translate('hero.trust_rating')}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ lang }}>
  document.addEventListener('DOMContentLoaded', () => {
    const heroDownloadBtn = document.getElementById('hero-download-btn');
    const heroDownloadText = document.getElementById('hero-download-text');
    const heroTrustVerified = document.getElementById('hero-trust-verified');

    // Detect browser
    const userAgent = navigator.userAgent.toLowerCase();
    const isEdge = userAgent.includes('edg/');
    const isChrome = userAgent.includes('chrome') && !isEdge;

    // Smart download button - detect browser and set correct download link
    if (heroDownloadBtn && heroDownloadText) {
      if (isEdge) {
        // Microsoft Edge - redirect to Edge Add-ons
        heroDownloadBtn.href =
          'https://microsoftedge.microsoft.com/addons/detail/flcemgbijffbmbgcmabmmjhankbegdgm';
        // Update button text for Edge
        const edgeText = heroDownloadBtn.getAttribute('data-text-edge');
        if (edgeText) {
          heroDownloadText.textContent = edgeText;
        }
        heroDownloadBtn.addEventListener('click', () => {
          if (typeof umami !== 'undefined') {
            umami.track('download_click', { store: 'edge', language: lang, source: 'hero' });
          }
        });
      } else {
        // Chrome and all other browsers (default to Chrome Web Store)
        heroDownloadBtn.href =
          'https://chromewebstore.google.com/detail/mkflehheaokdfopijachhfdbofkppdil';
        // Button text already set to Chrome by default
        heroDownloadBtn.addEventListener('click', () => {
          if (typeof umami !== 'undefined') {
            const storeType = isChrome ? 'chrome' : 'other';
            umami.track('download_click', { store: storeType, language: lang, source: 'hero' });
          }
        });
      }
    }

    // Update trust verified text based on browser
    if (heroTrustVerified) {
      if (isEdge) {
        const edgeTrustText = heroTrustVerified.getAttribute('data-text-edge');
        if (edgeTrustText) {
          heroTrustVerified.textContent = edgeTrustText;
        }
      }
      // Default is Chrome, already set in HTML
    }
  });
</script>
